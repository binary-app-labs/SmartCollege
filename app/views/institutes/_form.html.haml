= form_for(@institute) do |f|
  - if @institute.errors.any?
    #error_explanation
      %h2
        = pluralize(@institute.errors.count, "error")
        prohibited this institute from being saved:
      %ul
        - @institute.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :code
    %br/
    = f.text_field :code
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :grade
    %br/
    = f.text_field :grade
  .field
    = f.label :caption
    %br/
    = f.text_area :caption
  .field
    = f.label :logo
    %br/
    = f.text_field :logo
  .field
    = f.label :address
    %br/
    =# f.text_field :address
  .field
    = f.label :contact_person
    %br/
    =# f.text_field :contact_person
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :phone
    %br/
    = f.text_field :phone
  .actions
    = f.submit
