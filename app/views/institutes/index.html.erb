<h1>Listing institutes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th>Description</th>
    <th>Grade</th>
    <th>Caption</th>
    <th>Logo</th>
    <th>Address</th>
    <th>Contact person</th>
    <th>Email</th>
    <th>Phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @institutes.each do |institute| %>
  <tr>
    <td><%= institute.name %></td>
    <td><%= institute.code %></td>
    <td><%= institute.description %></td>
    <td><%= institute.grade %></td>
    <td><%= institute.caption %></td>
    <td><%= institute.logo %></td>
    <td><%= institute.address %></td>
    <td><%= institute.contact_person %></td>
    <td><%= institute.email %></td>
    <td><%= institute.phone %></td>
    <td><%= link_to 'Show', institute %></td>
    <td><%= link_to 'Edit', edit_institute_path(institute) %></td>
    <td><%= link_to 'Destroy', institute, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

